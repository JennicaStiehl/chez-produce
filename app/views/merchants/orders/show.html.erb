<h1>Merchant Order Show Page</h1>
  <%= @order.id %>
  <%= @order.user.name %>
  <%= @order.user.street_address %>
  <% @order.items.each do |item| %>
  <div id="item-info-<%=item.id %>">
    <%= link_to "#{item.name}", item_path(item)  %>
    <%= link_to image_tag(item.image), item_path(item) %>
  </div>
  <% end %>
  <% @order.order_items.each do |order_item| %>
    <%= order_item.order_price %>
    <%= order_item.order_quantity %>
    <%= order_item.order_price * order_item.order_quantity %>
  <% end %>
