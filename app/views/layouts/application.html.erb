<!DOCTYPE html>
<html>
  <head>
    <title>LittleShopV2</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
  </head>

  <body>
    <nav class="nav-bar">
      <ul>
        <li><%= link_to "Home", root_path %></li>
        <li><%= link_to "Shop", items_path %></li>
        <li><%= link_to "Merchants", merchants_path %></li>
        <% if current_merchant %>
          <section id="merchant-nav">
            <li><%= link_to "Dashboard", dashboard_path %></li>
            <li><%= link_to "Logout", logout_path %></li>
            <li>Logged in as <%= current_user.name %></li>
          </section>
        <% elsif current_admin %>
          <section id="admin-nav">
            <li><%= link_to "Users", admin_users_path %></li>
            <li><%= link_to "Dashboard", admin_dashboard_path %></li>
            <li><%= link_to "Logout", logout_path %></li>
            <li>Logged in as <%= current_user.name %></li>
          </section>
        <% elsif current_user %>
          <section id="user-nav">
            <li><%= link_to "Cart: #{@cart.total_count}", cart_path %></li>
            <li><%= link_to "Profile", profile_path %></li>
            <li><%= link_to "Logout", logout_path %></li>
            <li>Logged in as <%= current_user.name %></li>
          </section>
        <% else %>
            <li> <%= link_to "Cart: #{@cart.total_count}", cart_path %> </li>
            <li> <%= link_to "Register", register_path %> </li>
            <li> <%= link_to "Login", login_path %> </li>
        <% end %>
      </ul>
    </nav>

    <% flash.each do |type, message| %>
      <p class="flash"><%= message %></p>
    <% end %>

    <%= yield %>
  </body>
</html>
