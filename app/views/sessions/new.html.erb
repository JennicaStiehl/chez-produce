<section class="register">
  <h1>Login</h1>
  <%= form_tag login_path do %>
    <p><%= label_tag :email %><br />
    <%= text_field_tag :email, nil, class: 'input' %></p>

    <p><%= label_tag :password %><br />
    <%= password_field_tag :password, nil, class: 'input' %></p>

    <p><%= submit_tag "Login", class: 'button' %></p>
  <% end %>
</section>
