<section class="register">
<h1>Edit Profile</h1>

<% if @user.errors.any? %>
  <ul class="errors">
    <% @user.errors.full_messages.each do |message| %>
      <li class="error"><%= message %></li>
    <% end %>
  </ul>
<% end %>

<%= form_for @user do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name, class: :input %>
  <%= f.label :street_address %>
  <%= f.text_field :street_address, class: :input %>
  <%= f.label :city %>
  <%= f.text_field :city, class: :input %>
  <%= f.label :state %>
  <%= f.text_field :state, class: :input %>
  <%= f.label :zipcode %>
  <%= f.text_field :zipcode, class: :input %>
  <%= f.label :email %>
  <%= f.text_field :email, class: :input %>
  <%= f.label :password %>
  <%= f.password_field :password, class: :input %>
  <%= f.label :password_confirmation %>
  <%= f.password_field :password_confirmation, class: :input %>
  <%= f.submit "Update Profile", class: :button %>
<% end %>
</section>
