<section class="register">
<h1>Create an Account</h1>
<% if @user.errors.any? %>
  <ul class="errors">
    <% @user.errors.full_messages.each do |message| %>
      <li class="error"><%= message %></li>
    <% end %>
  </ul>
<% end %>

<%= form_for @user, action: :create do |f| %>
  <p><%= f.label :name %><br />
  <%= f.text_field :name, class: :input %></p>
  <p><%= f.label :street_address %><br />
  <%= f.text_field :street_address, class: :input %></p>
  <p><%= f.label :city %><br />
  <%= f.text_field :city, class: :input %></p>
  <p><%= f.label :state %><br />
  <%= f.text_field :state, class: :input %></p>
  <p><%= f.label :zipcode %><br />
  <%= f.text_field :zipcode, class: :input %></p>
  <p><%= f.label :email %><br />
  <%= f.text_field :email, value: nil, class: :input %></p>
  <p><%= f.label :password %><br />
  <%= f.password_field :password, class: :input %></p>
  <p><%= f.label :password_confirmation %><br />
  <%= f.password_field :password_confirmation, class: :input %></p>
  <p><%= f.submit "Register", class: :button %></p>
<% end %>
  </section>
