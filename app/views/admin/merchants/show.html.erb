<section class="profile">
<h1><%= @merchant.name %></h1>
<section id="merchant-profile">
  <ul>
    <li>Email: <%= @merchant.email %></li>
    <li>Street Address: <%= @merchant.street_address %></li>
    <li>City: <%= @merchant.city %></li>
    <li>State: <%= @merchant.state %></li>
    <li>Zipcode: <%= @merchant.zipcode %></li><br />
  </ul>
</section>

<section id="merchant-orders">
  <% @merchant.items.each do |item| %>
    <% item.order_items.each do |order_item| %>

      <h3>Order ID: <%= link_to "#{order_item.order_id}", profile_order_path(@merchant, order_item.order_id) %></h3>

      <li>Order Created: <%= order_item.created_at %></li>
      <li>Quantity: <%= order_item.order_quantity %></li>
      <li>Price: <%= order_item.order_price %></li>
      <li>Subtotal: <%= order_item.order_quantity * order_item.order_price %></li><br />
    <% end %>
  <% end %>
</section>

<li><%= button_to "Downgrade", admin_merchant_downgrade_path(@merchant), method: :patch, class: :button %></li><br />
</section>
