<h1>Browse All Items</h1>
<aside class="stats">
  <summary class="most-popular">
    <h2>Most Popular Items:</h2>
    <%@most_popular.each do |item| %>
      <li><%= item.name.capitalize %>: <%= item.items_qty %></li>
    <% end %>
  </summary>

  <summary class="least-popular">
    <h2>Least Popular Items:</h2>
    <% @least_popular.each do |item| %>
      <li><%= item.name.capitalize %>: <%= item.items_qty %></li>
    <% end %>
  </summary>
</aside>

<div class="items-container">
<% @items.each do |item| %>
  <section class="items-index">
    <%= link_to image_tag(item.image), item_path(item) %>
    <h3><%= link_to "#{item.name}", item_path(item) %></h3>
    <li><%= item.merchant_name %></li>
    <li>Price: <%= number_to_currency(item.current_price) %></li>
    <li>Inventory: <%= item.inventory %></li>
  </section>
<% end %>
</div>
